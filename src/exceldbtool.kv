<ExcelDBToolLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 5

    BoxLayout:
        size_hint_y: None
        height: 300
        orientation: 'vertical'
        # TODO: 탭을 누르면 다음 입력창으로 넘어가기
        Label:
            text: 'DB 접속 정보'
            font_name: 'KoreanFont'
            size_hint_y: None
            height: 40
        TextInput:
            id: db_host
            hint_text: '호스트 (예: localhost)'
            font_name: 'KoreanFont'
        TextInput:
            id: db_port
            hint_text: '포트 (기본값: 3306)'
            font_name: 'KoreanFont'
            input_filter: 'int'
        TextInput:
            id: db_user
            hint_text: '사용자명 (예: root)'
            font_name: 'KoreanFont'
        TextInput:
            id: db_pass
            hint_text: '비밀번호'
            font_name: 'KoreanFont'
            password: True
        TextInput:
            id: db_name
            hint_text: 'DB명'
            font_name: 'KoreanFont'

    BoxLayout:
        size_hint_y: None
        height: 140
        orientation: 'vertical'
        
        Label:
            text: '파일 및 테이블 정보'
            font_name: 'KoreanFont'
            size_hint_y: None
            height: 40
        BoxLayout:
            size_hint_y: None
            height: 40
            Label:
                id: file_path_label
                text: '파일을 선택하세요...'
                font_name: 'KoreanFont'
                size_hint_x: 0.7
            Button:
                text: '파일 선택'
                font_name: 'KoreanFont'
                size_hint_x: 0.3
                on_press: root.show_file_chooser_popup()
        TextInput:
            id: table_name
            hint_text: '테이블명'
            font_name: 'KoreanFont'

    Button:
        id: upload_button
        text: '업로드 시작'
        font_name: 'KoreanFont'
        size_hint_y: None
        height: 60
        on_press: root.start_upload()
    Label:
        id: status_label
        text: '대기 중...'
        font_name: 'KoreanFont'
        size_hint: 1, 1